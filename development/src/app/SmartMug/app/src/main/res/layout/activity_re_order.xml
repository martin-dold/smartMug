<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_re_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.smartmug.reOrderActivity"
    android:background="@drawable/smartmugclear">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Re-Order Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:id="@+id/buttonLightRed"
            android:background="@android:color/holo_red_light"
            android:alpha="0.5"
            android:textStyle="normal|bold" />

        <Button
            android:text="Call Waitress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonLightRed"
            android:layout_alignLeft="@+id/buttonLightRed"
            android:layout_alignStart="@+id/buttonLightRed"
            android:layout_marginTop="40dp"
            android:id="@+id/buttonLightBlue"
            android:background="@android:color/holo_blue_light"
            android:alpha="0.5"
            android:textStyle="normal|bold" />

        <Button
            android:text="Order bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonLightBlue"
            android:layout_alignRight="@+id/buttonLightBlue"
            android:layout_alignEnd="@+id/buttonLightBlue"
            android:layout_marginTop="40dp"
            android:id="@+id/buttonLightGreen"
            android:background="@android:color/holo_green_light"
            android:alpha="0.5"
            android:textStyle="normal|bold" />

        <Button
            android:text="Single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/buttonLightGreen"
            android:layout_alignStart="@+id/buttonLightGreen"
            android:layout_marginTop="40dp"
            android:id="@+id/buttonLightWhite"
            android:background="@android:color/white"
            android:alpha="0.5"
            android:textStyle="normal|bold" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
